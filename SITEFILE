    }
    .content-section {
      display: none;
      padding: 100px 20px 20px 20px; /* Leave room for nav */
      min-height: 100vh;
      transition: opacity 0.5s ease, transform 0.5s ease;
    }
    .active-section {
      display: block;
      opacity: 1;
      transform: translateX(0);
    }
    .fade-out {
      opacity: 0;
      transform: translateX(-20px);
    }
